<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookArchive</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 flex flex-col min-h-screen">
<nav class="bg-white shadow-md py-4 px-6 sm:px-10">
    <div class="max-w-7xl mx-auto">
        <div class="flex flex-col sm:flex-row justify-between items-center">
            <a class="text-2xl font-semibold text-gray-800 mb-4 sm:mb-0" asp-area="" asp-controller="Home" asp-action="Index">BookArchive</a>
            <form class="flex items-center w-full sm:w-1/2 mb-4 sm:mb-0" asp-controller="Books" asp-action="Search">
                <input type="text" name="query" class="w-full px-4 py-2 rounded-l-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Пошук по назві або автору"/>
                <button class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-r-md transition duration-300 ease-in-out">Пошук</button>
            </form>
            <div class="flex flex-col sm:flex-row items-center space-y-2 sm:space-y-0 sm:space-x-6">
                <a class="text-gray-700 hover:text-gray-900 transition duration-300 ease-in-out" asp-area="" asp-controller="Books" asp-action="Index">Каталог книжок</a>
                @if (User.Identity.IsAuthenticated)
                {
                <a class="text-gray-700 hover:text-gray-900 transition duration-300 ease-in-out" asp-area="" asp-controller="Favorites" asp-action="Profile">@User.Identity.Name</a>
                <a class="text-gray-700 hover:text-gray-900 transition duration-300 ease-in-out" asp-area="" asp-controller="Auth" asp-action="Logout">Вийти</a>
                }
                else
                {
                <a class="text-gray-700 hover:text-gray-900 transition duration-300 ease-in-out" asp-area="" asp-controller="Auth" asp-action="Login">Авторизація</a>
                <a class="text-gray-700 hover:text-gray-900 transition duration-300 ease-in-out" asp-area="" asp-controller="Auth" asp-action="Register">Реєстрація</a>
                }
            </div>
        </div>
    </div>
</nav>

<main role="main" class="flex-grow container mx-auto px-6 py-8">
    @RenderBody()
</main>

<footer class="bg-white border-t border-gray-200 mt-auto">
    <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
        <p>&copy; 2024 - BookArchive</p>
        <a class="text-gray-700 hover:text-gray-900 transition duration-300 ease-in-out" asp-area="" asp-controller="Home" asp-action="Privacy">Конфіденційність</a>
    </div>
</footer>

<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>