@{
    ViewData["Title"] = "Головна";
}

<div class="container mx-auto px-4 py-8">
    <section class="text-center mb-16">
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-gray-800 mb-6">Вітаємо в BookArchive</h1>
        <p class="text-xl text-gray-600 mb-8">Знайдіть свою наступну улюблену книгу</p>
        <a class="px-8 py-4 bg-blue-500 hover:bg-blue-600 text-white font-bold rounded-full transition duration-300 ease-in-out" asp-area="" asp-controller="Books" asp-action="Index">
            Знайти книжку
        </a>
    </section>

    <section class="mb-16">
        <h2 class="text-3xl font-semibold text-gray-800 mb-6">Останні надходження</h2>
        <div class="relative">
            <div class="overflow-hidden">
                <div class="flex transition-transform duration-300 ease-in-out" id="latestBooksSlider">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 flex-shrink-0 px-2">
                            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                                <img src="/placeholder.svg?height=300&width=200" alt="Book cover" class="w-full h-48 object-cover">
                                <div class="p-4">
                                    <h3 class="font-semibold text-lg mb-2">Книга @i</h3>
                                    <p class="text-sm text-gray-600">Автор @i</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <button class="absolute top-1/2 left-0 transform -translate-y-1/2 bg-white p-2 rounded-full shadow-md" onclick="moveSlider(-1)">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
            </button>
            <button class="absolute top-1/2 right-0 transform -translate-y-1/2 bg-white p-2 rounded-full shadow-md" onclick="moveSlider(1)">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
            </button>
        </div>
    </section>

    <section>
        <h2 class="text-3xl font-semibold text-gray-800 mb-6">Найкращі книги</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            @for (int i = 1; i <= 4; i++)
            {
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <img src="/placeholder.svg?height=400&width=300" alt="Book cover" class="w-full h-56 object-cover">
                    <div class="p-4">
                        <h3 class="font-semibold text-lg mb-2">Найкраща книга @i</h3>
                        <p class="text-sm text-gray-600 mb-2">Автор @i</p>
                        <div class="flex items-center">
                            @for (int j = 0; j < 5; j++)
                            {
                                <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path></svg>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</div>

@section Scripts {
    <script>
        let currentPosition = 0;
        const slider = document.getElementById('latestBooksSlider');
        const itemWidth = slider.children[0].offsetWidth;
        const itemCount = slider.children.length;

        function moveSlider(direction) {
            currentPosition += direction;
            if (currentPosition < 0) currentPosition = itemCount - 1;
            if (currentPosition >= itemCount) currentPosition = 0;
            slider.style.transform = `translateX(-${currentPosition * itemWidth}px)`;
        }
    </script>
}