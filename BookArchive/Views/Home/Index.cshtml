@{
    ViewData["Title"] = "Головна";
}

<div class="container mx-auto px-4 py-8">
    <section class="text-center mb-16">
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold text-gray-800 mb-6">Вітаємо в BookArchive</h1>
        <p class="text-xl text-gray-600 mb-8">Знайдіть свою наступну улюблену книгу</p>
        <a class="px-8 py-4 bg-blue-500 hover:bg-blue-600 text-white font-bold rounded-full transition duration-300 ease-in-out" asp-area="" asp-controller="Books" asp-action="Index">
            Знайти книжку
        </a>
    </section>
</div>

@section Scripts {
    <script>
        let currentPosition = 0;
        const slider = document.getElementById('latestBooksSlider');
        const itemWidth = slider.children[0].offsetWidth;
        const itemCount = slider.children.length;

        function moveSlider(direction) {
            currentPosition += direction;
            if (currentPosition < 0) currentPosition = itemCount - 1;
            if (currentPosition >= itemCount) currentPosition = 0;
            slider.style.transform = `translateX(-${currentPosition * itemWidth}px)`;
        }
    </script>
}