@model BookArchive.Models.User

@{
    ViewData["Title"] = "Профіль";
}

<div class="container mx-auto px-4 py-8 max-w-3xl">
    <div class="space-y-8">
        <!-- Personal Information Section -->
        <div>
            <h2 class="text-2xl font-bold mb-6">Персональна інформація</h2>
            <div>
                <label class="block text-sm font-medium mb-2">Пошта</label>
                <input
                    type="text"
                    value="@Model.Email"
                    class="w-full px-3 py-2 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"/>
            </div>
        </div>

        <!-- Wishlist Section -->
        <div>
            <h2 class="text-2xl font-bold mb-6">Wishlist</h2>
            <div class="space-y-4">
                <!-- Book Item -->
                <div class="flex items-start space-x-4 p-4 bg-white rounded-lg border border-gray-200">
                    <img
                        src="/placeholder.svg?height=80&width=60"
                        alt="The Alchemist"
                        class="w-[60px] h-[80px] object-cover"/>
                    <div class="flex-1">
                        <div class="flex justify-between items-start">
                            <div>
                                <h3 class="font-semibold">The Alchemist</h3>
                                <p class="text-gray-600">Paulo Coelho</p>
                            </div>
                            <div class="flex items-center space-x-4">
                                <div class="flex items-center">
                                    <span class="text-gray-600">1988</span>
                                    <div class="mx-2 flex items-center">
                                        <span class="text-yellow-400">★</span>
                                        <span class="ml-1">4.2</span>
                                    </div>
                                </div>
                                <button class="text-gray-400 hover:text-gray-600">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M3 6h18"></path>
                                        <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"></path>
                                        <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"></path>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Book Item -->
                <div class="flex items-start space-x-4 p-4 bg-white rounded-lg border border-gray-200">
                    <img
                        src="/placeholder.svg?height=80&width=60"
                        alt="Dune"
                        class="w-[60px] h-[80px] object-cover"/>
                    <div class="flex-1">
                        <div class="flex justify-between items-start">
                            <div>
                                <h3 class="font-semibold">Dune</h3>
                                <p class="text-gray-600">Frank Herbert</p>
                            </div>
                            <div class="flex items-center space-x-4">
                                <div class="flex items-center">
                                    <span class="text-gray-600">1965</span>
                                    <div class="mx-2 flex items-center">
                                        <span class="text-yellow-400">★</span>
                                        <span class="ml-1">4.5</span>
                                    </div>
                                </div>
                                <button class="text-gray-400 hover:text-gray-600">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M3 6h18"></path>
                                        <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"></path>
                                        <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"></path>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>